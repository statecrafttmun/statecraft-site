generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                   String   @id @default(uuid())
  title                String
  date                 String
  location             String
  desc                 String
  status               String
  registrationLink     String?
  registrationDeadline String?
  isFeatured           Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  fee                  String?
}

model Publication {
  id        String   @id @default(uuid())
  title     String
  excerpt   String
  content   String?
  author    String
  date      String
  tags      String[]
  type      String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(uuid())
  src       String
  category  String
  size      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamMember {
  id          String   @id @default(uuid())
  name        String
  role        String
  image       String
  /// Percentage (0..100) crop focus for object-position.
  /// Lets admin control what part of the image stays visible in cards.
  imageFocusX Int      @default(50)
  imageFocusY Int      @default(20)
  isSenior    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  quote       String?
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PublicationCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  key       String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Timeline {
  id        String   @id @default(uuid())
  year      String
  title     String
  desc      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
